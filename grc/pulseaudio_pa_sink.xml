<?xml version="1.0"?>
<block>
  <name>PulseAudio Sink</name>
  <key>pulseaudio_pa_sink</key>
  <category>Sinks</category>
  <flags>throttle</flags>
  <import>import pulseaudio</import>
  <make>pulseaudio.pa_sink(
        samp_rate=$samp_rate,
        nchannels=$nchannels,
        application_name=$application_name,
        device=$device or None,
        stream_name=$stream_name,
        channel_map=$channel_map or None)</make>

  <param>
    <name>Num Channels</name>
    <key>nchannels</key>
    <value>1</value>
    <type>int</type>
  </param>

  <param>
    <name>Sample Rate</name>
    <key>samp_rate</key>
    <value>samp_rate</value>
    <type>int</type>
  </param>

  <param>
    <name>Application Name</name>
    <key>application_name</key>
    <value>GNU Radio</value>
    <type>string</type>
  </param>

  <param>
    <name>Device</name>
    <key>device</key>
    <value></value>
    <type>string</type>
  </param>

  <param>
    <name>Stream Name</name>
    <key>stream_name</key>
    <value>output</value>
    <type>string</type>
  </param>

  <param>
    <name>Channel Map</name>
    <key>channel_map</key>
    <value></value>
    <type>string</type>
  </param>

  <check>$nchannels &gt; 0</check>
  <check>$samp_rate &gt; 0</check>

  <sink>
    <name>in</name>
    <type>float</type>
    <nports>$nchannels</nports>
  </sink>
</block>
